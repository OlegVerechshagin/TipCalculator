<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- мой ресурс styleTextView со значениями свойств:
         layout_gravity, background, elevation, gravity, padding  -->
    <style name="styleTextView">
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:background">@color/result_background</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/textview_padding</item>
    </style>
</resources>
